# Django Settings
SECRET_KEY=your-secret-key-here-generate-using-django-secret-key
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,your-vps-ip-address,your-domain.com

# Database
# For SQLite (default)
DATABASE_URL=sqlite:///db.sqlite3

# For PostgreSQL (uncomment and configure)
# DATABASE_URL=postgres://user:password@localhost:5432/dbname

# Security
DJANGO_SETTINGS_MODULE=Vps.settings
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Static files
STATIC_URL=/static/
MEDIA_URL=/media/

# Optional: Redis Cache
# CACHE_URL=redis://localhost:6379/0
