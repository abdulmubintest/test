# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=0

# Set to your domain in production
ALLOWED_HOSTS=kybernode.com,.kybernode.com,localhost,127.0.0.1

# Session and CSRF cookie domain (use empty for localhost, domain name for production)
SESSION_COOKIE_DOMAIN=
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1

# Database Configuration (match these with docker-compose.yml)
POSTGRES_DB=blogdb
POSTGRES_USER=bloguser
POSTGRES_PASSWORD=blogpassword
POSTGRES_HOST=internal_proxy
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=internal_proxy
REDIS_PORT=6379
